{% extends 'base.html.twig' %}

{% block title %}Edit Teacher{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Back to list button -->
        <div class="mb-3">
            <a href="{{ path('app_teacher_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <h1 class="mb-4">Edit Teacher</h1>

        <div class="card p-4">
            <!-- Edit form -->
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.lastName, 'Last Name') }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.firstName, 'First Name') }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.phoneNumber, 'Phone Number') }}
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.educationLevel, 'Education Level') }}
                {{ form_widget(form.educationLevel, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.specialities, 'Specialities') }}
                {{ form_widget(form.specialities, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Save button -->
            <div class="d-flex justify-content-between mt-4">
                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
                <a href="{{ path('app_teacher_index') }}" class="btn btn-secondary">Cancel</a>
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Delete button -->
        <div class="d-flex justify-content-end mt-4">
            {{ include('teacher/_delete_form.html.twig', {'button_label': 'Delete', 'class': 'btn btn-danger'}) }}
        </div>
    </div>
{% endblock %}
