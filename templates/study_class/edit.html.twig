{% extends 'base.html.twig' %}

{% block title %}Edit StudyClass{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Back to list button -->
        <div class="mb-3">
            <a href="{{ path('app_study_class_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <h1 class="mb-4">Edit Study Class</h1>

        <div class="card p-4">
            <!-- Edit form -->
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.name, 'Class Name') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.level, 'Class Level') }}
                        {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.speciality, 'Speciality') }}
                {{ form_widget(form.speciality, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Save button -->
            <div class="d-flex justify-content-between mt-4">
                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
                <a href="{{ path('app_study_class_index') }}" class="btn btn-secondary">Cancel</a>
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Delete button -->
        <div class="d-flex justify-content-end mt-4">
            {{ include('study_class/_delete_form.html.twig', {'button_label': 'Delete', 'class': 'btn btn-danger'}) }}
        </div>
    </div>
{% endblock %}
