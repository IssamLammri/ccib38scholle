{% extends 'base.html.twig' %}

{% block title %}Study Class Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Back to list button -->
        <div class="mb-3">
            <a href="{{ path('app_study_class_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <h1 class="mb-4">Study Class Details</h1>

        <div class="card p-4">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ study_class.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ study_class.name }}</td>
                </tr>
                <tr>
                    <th>Level</th>
                    <td>{{ study_class.level }}</td>
                </tr>
                <tr>
                    <th>Speciality</th>
                    <td>{{ study_class.speciality }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Edit and Delete buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_study_class_edit', {'id': study_class.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>

            {{ include('study_class/_delete_form.html.twig', {'button_label': 'Delete', 'class': 'btn btn-danger'}) }}
        </div>
    </div>
{% endblock %}
