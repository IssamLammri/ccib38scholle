<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('static/icons/logoccib38.webp') }}">
    {% block stylesheets %}
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap" rel="stylesheet"/>
        <!-- MDBootstrap CSS -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet"/>
        <!-- Your custom CSS -->
        <link href="{{ asset('build/app.css') }}" rel="stylesheet">
        <link href="{{ asset('css/custom.css') }}" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
        <style>

        </style>
    {% endblock %}
    {% block javascripts %}
        <!-- MDBootstrap JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
{% include 'navbar.html.twig' %}
<div id="app">
    <menu-list
            :current-user="{{ app.user ? app.user|serialize('json', {'groups': 'read_user'}) : 'null' }}"
    ></menu-list>
    <div class="content"  >
        <div class="main-content">
            {% for type, messages in app.flashes %}
                <div class="alert alert-{{ type }} alert-dismissible fade show alert-centered" role="alert">
                    {% for message in messages %}
                        {{ message }}
                    {% endfor %}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </div>
</div>


{#{% include 'footer.html.twig' %}#}
</body>
</html>
