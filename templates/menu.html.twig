{# templates/_partials/menu.html.twig (version moderne & aérée) #}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        /* Palette moderne et cohérente */
        --bg-primary: #ffffff;
        --bg-secondary: #f8fafc;
        --bg-hover: #f1f5f9;
        --bg-active: #e2e8f0;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --accent: #f6f6f6;
        --accent-light: #85b7f4;
        --border: #e2e8f0;
        --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --radius: 8px;
        --radius-lg: 12px;
    }

    .modern-sidebar {
        width: 250px;
        height: 100vh;
        background: var(--bg-primary);
        border-right: 1px solid var(--border);
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        box-shadow: var(--shadow-lg);
        z-index: 1000;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Header */
    .sidebar-header {
        border-bottom: 1px solid var(--border);
        background: linear-gradient(135deg, var(--accent) 0%, #ccf1d5 100%);
        position: relative;
        overflow: hidden;
    }

    .sidebar-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1" fill="white" opacity="0.1"/><circle cx="40" cy="80" r="1.5" fill="white" opacity="0.1"/></svg>');
    }

    .sidebar-header .logo-container {
        display: flex;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .sidebar-header .logo {
        width: 90px;
        height: 90px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: var(--radius);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
    }

    .sidebar-header .logo img {
        max-width: 100px;
        max-height: 100px;
        object-fit: contain;
    }

    .sidebar-header .brand-info h3 {
        color: black;
        font-size: 18px;
        font-weight: 600;
        margin: 0;
    }

    /* Menu */
    .sidebar-menu {
        flex: 1;
        overflow-y: auto;
        padding: 16px 0;
        list-style: none;
    }

    .sidebar-menu::-webkit-scrollbar {
        width: 4px;
    }

    .sidebar-menu::-webkit-scrollbar-track {
        background: transparent;
    }

    .sidebar-menu::-webkit-scrollbar-thumb {
        background: var(--border);
        border-radius: 2px;
    }

    .sidebar-menu::-webkit-scrollbar-thumb:hover {
        background: var(--text-muted);
    }

    .menu-header {
        padding: 8px 24px 12px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--text-muted);
        margin-top: 16px;
    }

    .menu-header:first-child {
        margin-top: 0;
    }

    .sidebar-menu > li {
        margin: 0 12px 4px;
    }

    .menu-link {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        color: var(--text-primary);
        text-decoration: none;
        border-radius: var(--radius);
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

    .menu-link:hover {
        background: var(--bg-hover);
        color: var(--accent);
        transform: translateX(2px);
    }

    .menu-link.active {
        background: var(--accent-light);
        color: var(--accent);
        font-weight: 600;
    }

    .menu-link.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 20px;
        background: var(--accent);
        border-radius: 0 2px 2px 0;
    }

    .menu-link i:first-child {
        width: 20px;
        height: 20px;
        margin-right: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        color: var(--text-secondary);
        transition: color 0.2s ease;
    }

    .menu-link:hover i:first-child,
    .menu-link.active i:first-child {
        color: var(--accent);
    }

    /* Sous-menus */
    .has-submenu .submenu-toggle {
        position: relative;
    }

    .has-submenu .submenu-toggle .toggle-icon {
        margin-left: auto;
        font-size: 12px;
        color: var(--text-muted);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .has-submenu.open > .submenu-toggle .toggle-icon {
        transform: rotate(180deg);
        color: var(--accent);
    }

    .submenu {
        max-height: 0;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        margin: 4px 0 8px 0;
        list-style: none;
        padding-left: 0;
    }

    .has-submenu.open .submenu {
        max-height: 400px;
    }

    .submenu li {
        margin: 0 12px 2px;
    }

    .submenu a {
        display: flex;
        align-items: center;
        padding: 8px 16px 8px 48px;
        color: var(--text-secondary);
        text-decoration: none;
        border-radius: var(--radius);
        font-size: 13px;
        font-weight: 400;
        transition: all 0.2s ease;
        position: relative;
    }

    .submenu a:hover {
        background: var(--bg-hover);
        color: var(--accent);
        padding-left: 50px;
    }

    .submenu a.active {
        background: var(--accent-light);
        color: var(--accent);
        font-weight: 500;
    }

    .submenu a::before {
        content: '';
        position: absolute;
        left: 32px;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 4px;
        background: var(--text-muted);
        border-radius: 50%;
        transition: all 0.2s ease;
    }

    .submenu a:hover::before,
    .submenu a.active::before {
        background: var(--accent);
        transform: translateY(-50%) scale(1.2);
    }

    /* Animation d'entrée */
    .sidebar-menu > li {
        animation: slideInLeft 0.3s ease forwards;
        opacity: 0;
        transform: translateX(-20px);
    }

    .sidebar-menu > li:nth-child(1) { animation-delay: 0.1s; }
    .sidebar-menu > li:nth-child(2) { animation-delay: 0.2s; }
    .sidebar-menu > li:nth-child(3) { animation-delay: 0.3s; }
    .sidebar-menu > li:nth-child(4) { animation-delay: 0.4s; }
    .sidebar-menu > li:nth-child(5) { animation-delay: 0.5s; }
    .sidebar-menu > li:nth-child(6) { animation-delay: 0.6s; }
    .sidebar-menu > li:nth-child(7) { animation-delay: 0.7s; }
    .sidebar-menu > li:nth-child(8) { animation-delay: 0.8s; }

    @keyframes slideInLeft {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* État de focus pour l'accessibilité */
    .menu-link:focus,
    .submenu a:focus {
        outline: 2px solid var(--accent);
        outline-offset: 2px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .modern-sidebar {
            transform: translateX(-100%);
        }

        .modern-sidebar.mobile-open {
            transform: translateX(0);
        }
    }
</style>

