    </ul>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const submenuToggles = document.querySelectorAll('.modern-sidebar .submenu-toggle');

        submenuToggles.forEach(toggle => {
            toggle.addEventListener('click', function (event) {
                event.preventDefault(); // Empêche la navigation pour le lien parent

                // Le <li> parent
                const parentLi = this.parentElement;

                // Le <ul> du sous-menu
                const submenu = this.nextElementSibling;

                // Fermer les autres sous-menus ouverts
                document.querySelectorAll('.modern-sidebar .has-submenu.open').forEach(openSubmenu => {
                    if (openSubmenu !== parentLi) {
                        openSubmenu.classList.remove('open');
                    }
                });

                // Ouvrir ou fermer le sous-menu cliqué
                parentLi.classList.toggle('open');
            });
        });

        // Gestion du lien actif en fonction de l'URL actuelle
        const currentPath = window.location.pathname;
        const menuLinks = document.querySelectorAll('.modern-sidebar a[href]');

        menuLinks.forEach(link => {
            const href = link.getAttribute('href');

            // Vérifier si le href correspond au chemin actuel
            if (href && href !== '#' && currentPath.includes(href.replace(window.location.origin, ''))) {
                link.classList.add('active');

                // Si c'est un lien de sous-menu, ouvrir le parent
                const parentSubmenu = link.closest('.submenu');
                if (parentSubmenu) {
                    const parentLi = parentSubmenu.parentElement;
                    parentLi.classList.add('open');
                    // Activer aussi le lien parent
                    parentLi.querySelector('.submenu-toggle').classList.add('active');
                }
            }
        });

        // Amélioration de l'accessibilité clavier
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Enter' || event.key === ' ') {
                const focusedElement = document.activeElement;
                if (focusedElement && focusedElement.classList.contains('submenu-toggle')) {
                    event.preventDefault();
                    focusedElement.click();
                }
            }
        });
    });
</script>