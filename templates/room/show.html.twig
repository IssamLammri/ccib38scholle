{% extends 'base.html.twig' %}

{% block title %}Room Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Back to list button -->
        <div class="mb-3">
            <a href="{{ path('app_room_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <h1 class="mb-4">Room Details</h1>

        <div class="card p-4">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name ?? 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Max Students</th>
                    <td>{{ room.maxStudents ?? 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Comment</th>
                    <td>{{ room.comment ?? 'N/A' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Buttons: Edit and Delete -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            {{ include('room/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
