<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('static/icons/logoccib38.webp') }}">
    {% block stylesheets %}
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap" rel="stylesheet"/>
        <!-- MDBootstrap CSS -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet">
        <!-- Your custom CSS -->
        <link href="{{ asset('build/app.css') }}" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
        <style>
            /* Ajuste la hauteur minimum pour remplir l'écran */
            .gradient-form {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            /* Supprime les marges excessives */
            body {
                margin: 0;
                padding: 0;
            }

            /* Cacher l'image sur les écrans < 768px */
            @media (max-width: 768px) {
                .gradient-custom-2 {
                    display: none;
                }
            }
            .alert-centered {
                position: absolute;
                top: 10px;
                left: 50%;
                transform: translateX(-50%);
                z-index: 1050;
                max-width: 80%; /* Pour limiter la largeur */
                text-align: center;
            }
        </style>
    {% endblock %}
    {% block javascripts %}
        <!-- MDBootstrap JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.js"></script>
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

<div>
    {% for type, messages in app.flashes %}
        <div class="alert alert-{{ type }} alert-dismissible fade show alert-centered" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% block body %}{% endblock %}
</div>
{#{% include 'footer.html.twig' %}#}
</body>
</html>
